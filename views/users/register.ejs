<% layout('layouts/boilerplate') %>

    <div class="container justify-content align-items-center mt-1">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 mb-5">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1454496522488-7a8e488e8606?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1510&q=80"
                        alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">
                            Register
                        </h5>
                        <form action="/register" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" required
                                    autofocus>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="email">E-mail</label>
                                <input class="form-control" type="email" id="email" name="email" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button class="btn btn-dark">
                                    Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>